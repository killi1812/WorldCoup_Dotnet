<UserControl x:Class="WpfGui.UtakmicaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfGui"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="400">
    <StackPanel>
        <Grid Width="800">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Width="Auto" Height="30" Margin="0,0,400,0">
                <ComboBox x:Name="cmbFavorite" Width="120" Margin="5,5,5,5" SelectionChanged="cmbFavorite_SelectionChanged"/>
                <Label Content="VS" Height="25" />
                <ComboBox x:Name="cmbOpponed" Width="120" Margin="5,5,5,5" SelectionChanged="cmbFavorite_SelectionChanged" />
                <Label x:Name="lblResult" Content="Label" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
        <Grid MinHeight="420" Height="420" Width="400">
            <TextBlock x:Name="tbFavoriteResults" Width="120" Margin="5,5,0,5" HorizontalAlignment="Left" />
            <TextBlock x:Name="tbResults" Width="120" Margin="160,5,0,5" HorizontalAlignment="Left" />
        </Grid>
    </StackPanel>
</UserControl>
